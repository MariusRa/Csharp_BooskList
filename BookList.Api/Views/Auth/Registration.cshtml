@model BookList.Api.viewModels.RegistrationViewModel;

<h1>Register please</h1>

<form asp-action="Registration">
    <label>Name</label>
    <input asp-for="@Model.Name" />
    <span asp-validation-for="@Model.Name" class="text danger"></span>

    <label>Email</label>
    <input asp-for="@Model.Email" />
    <span asp-validation-for="@Model.Email" class="text danger"></span>

    <label>Password</label>
    <input asp-for="@Model.Password" />
    <span asp-validation-for="@Model.Password" class="text danger"></span>

    <label>Repeat Password</label>
    <input asp-for="@Model.ConfirmPassword" />
    <span asp-validation-for="@Model.ConfirmPassword" class="text danger"></span>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

    <label>Already have an account?</label>
    <a class="badge badge-danger" asp-controller="Auth" asp-action="LogIn">Sing In</a>
</form>


