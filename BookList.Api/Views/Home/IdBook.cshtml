@model Book;

<div>
    <h2>About Book</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>Title</td>
                <td>@Model.Title</td>
                <td rowspan="5"> <img src="https://i.gr-assets.com/images/S/compressed.photo.goodreads.com/books/1415583796l/25403.jpg" alt="Book cover" /></td>
            </tr>
            <tr>
                <td>Author</td>
                <td>@Model.Author</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>@Model.Genre</td>
            </tr>
            <tr>
                <td>Pages</td>
                <td>@Model.Pages</td>
            </tr>
            <tr>
                <td>Published</td>
                <td>@Model.Published</td>
            </tr>
        </tbody>
    </table>
    <a class="badge badge-danger" asp-controller="Home" asp-action="Index">Back To Favorite Books</a>
</div>

