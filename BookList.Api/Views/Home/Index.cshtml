@model IEnumerable<Book>;


<h2>Favorite Books</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Book</th>
                <th scope="col">Info</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td><a class="badge badge-info" asp-controller="Home" asp-action="IdBook" asp-route-id="@book.BookId"> More </a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a class="badge badge-danger" asp-controller="Auth" asp-action="LogIn">Sing Out</a>
</div>
